<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>
<% end %> 

<%= link_to "New FCS file", new_fcs_file_path %>   
<br>   
<br> 
  
<table border="3">   
   <thead>   
      <tr>   
         <th>File Name</th>   
         <th>Download Link</th>   
         <th>Action</th>   
      </tr>   
   </thead>   
      
   <tbody>   
      <% @fcs_files.each do |file| %>   
            
         <tr>   
            <td><%= file.name %></td>   
            <td><%= link_to "Download", file.attachment_url %></td>   
            <td><%= link_to "Delete",  file, method: :delete, confirm: "Are you sure you want to delete #{file.name}?" %></td>   
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table>   
</div>  