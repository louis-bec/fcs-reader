<div class="container">   
    <% if !flash[:notice].blank? %>   
        <div>   
            <%= flash[:notice] %>   
        </div>
    <% end %> 

    <%= link_to "New S3 file", new_s3_file_path %>   
    <br>   
    <br> 

    <% if @s3_files.any? %>  
        <table class="table table-striped table-hover">   
        <thead>   
            <tr>   
                <th>File Name</th> 
                <th>Open</th> 
                <th>Download Link</th>   
                <th>Action</th>   
            </tr>   
        </thead>   
            
        <tbody>      
                <% @s3_files.each do |file| %>                   
                    <tr>   
                        <td><%= file.name %></td>
                        <td><%= link_to "Open", fcs_file_path(file.id) %></td>   
                        <td><%= link_to "Download", file.attachment_url %></td>   
                        <td><%= link_to "Delete",  file, method: :delete, data: {confirm: "Are you sure you want to delete #{file.name}?"} %></td>   
                    </tr>                   
                <% end %>
        </tbody>         
        </table>   
    <% else %>
        <div>No file waas uploaded, you can upload one.</div>
    <% end %>
</div>  